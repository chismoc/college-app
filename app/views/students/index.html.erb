<div class="col-lg-10">
    <p><%= notice %></p>
    <h1>Listing Students</h1>
    <%= link_to 'New Student', new_student_path,class: "btn btn-primary btn-lg mb-2 mt-2" %>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
            <th>Student Name</th>
            <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
        <% @students.each do |student| %>
            <tr>
            <td><%= student.name_with_email %></td>
            <td><%= link_to 'View', student, class: "btn btn-primary"%></td>
            <td><%= link_to 'Edit', edit_student_path(student),class: "btn btn-secondary" %></td>
            <td><%= button_to 'Delete', student_path(student),form: { data: {turbo_confirm: "Are you sure you want to delete ?" } }, method: :delete , class:"btn btn-danger" %></td>
            </tr>
        <%end%>
        </tbody>
    </table>
</div>