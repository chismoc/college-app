<p><%= notice %></p>
<h1>Listing Students</h1>
<%= link_to 'New Student', new_student_path %>
<table>
    <thead>
        <tr>
        <th>Student Name</th>
        <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
        <tr>
        <td><%= student.name_with_email %></td>
        <td><%= link_to 'View', student%></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= button_to 'Delete', student_path(student),form: { data: {turbo_confirm: "Are you sure you want to delete ?" } }, method: :delete %></td>
        </tr>
    <%end%>
    </tbody>
</table>