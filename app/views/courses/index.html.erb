<div id="page-content">
  <p style="color: green"><%= notice %></p>
    <div class="row">
      <div class="col-12 text-center">
       <h3>Courses Listing</h3>
      </div>
    </div>
    <div class="row">
      <% @courses.all.each do |course| %>
        <div class="col-md-6">
              <div class="card bg-grey mb-3" style="width: 18rem;">
                  <div class="card-body">
                    <h5 class="card-title"><%= course.course_code %> : <%=course.name %></h5>
                    <p class="card-text"><%= course.description %></p>

                    <a href="#" > <%= link_to "Info", course , class:"btn btn-info" %></a>
                    <a href="#" > <%= link_to "Enroll", course , class:"btn btn-secondary" %></a>
                  
                  </div>
              </div>
          </div>
      <% end %>
</div>
 
  <div class="form-group mt-2 mb-2">
  <%= link_to "New course", new_course_path , class: "btn btn-primary btn-lg" %>
  </div>
</div>
        
   


